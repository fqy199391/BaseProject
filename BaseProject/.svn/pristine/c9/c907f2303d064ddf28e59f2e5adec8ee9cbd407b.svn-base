<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@drawable/bg_jianbian"
             tools:context=".fragment.MainHomeFragment">


    <LinearLayout
        android:id="@+id/panInput"
        android:layout_width="339dp"
        android:layout_height="367dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_user_new" />

            <EditText
                android:id="@+id/edtUcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/circle_touming"
                android:ems="10"
                android:hint="请输入用户名"
                android:inputType="textPersonName"
                android:paddingLeft="40dp"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_password_new" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/circle_touming"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="40dp"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/checkBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_remeberpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_check"
                    android:button="@null"
                    android:scaleX="0.6"
                    android:scaleY="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <CheckBox
                    android:id="@+id/cb_auto_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_check"
                    android:button="@null"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动登录"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btChangePwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="修改密码"
                android:textColor="#0099ff"
                android:textSize="13sp"
                android:textStyle="italic"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/btLogin"
            style="@style/btn_style"
            android:background="@drawable/circle_jianbian"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/third_login_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23.0dip"
        android:layout_marginLeft="60.0dip"
        android:layout_marginRight="60.0dip">

        <LinearLayout
            android:id="@+id/wx_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wx_icon_txt"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/button_logoin_wx_selector" />

            <TextView
                style="@style/textStyle.Normal.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="微信登录"
                android:textColor="#ff686868" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qq_icon_txt"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/button_logoin_qq_selector" />

            <TextView
                style="@style/textStyle.Normal.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="QQ登录"
                android:textColor="#ff686868" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btChangeIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:text="Ip地址修改"
        android:textColor="#0099ff"
        android:textSize="13sp"
        android:textStyle="italic" />

</LinearLayout>